
<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, data: { turbo: false }, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
  <div class="form-group row m-2">
    <%= f.label :name, "Category name", class: "col-4 col-form-label text-light" %>
    <div class="col-8">
      <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: 'Enter a name ...'  %>
    </div>
  </div>
  
  <div class="form-group row mt-4 ">
    <%= f.submit class: 'btn btn-outline-light btn-lg' %>
  </div>
<% end %>
    