<div class="container d-flex flex-column">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>

      <%= form_with(model: @user, data: { turbo: false }, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row m-2">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: 'form-control shadow rounded', placeholder: 'Username ...'  %>
          </div>
        </div>
        <div class="form-group row m-2">
          <%= f.label :email, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.email_field :email, class: 'form-control shadow rounded', placeholder: 'Email address ...' %>
          </div>
        </div>

        <div class="form-group row m-2">
          <%= f.label :password, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Choose a password' %>
          </div>
        </div>

        <div class="form-group row mt-4 ">
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>

    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center mt-4" %>

  </div>
</div>